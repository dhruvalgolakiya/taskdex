{
  "expo": {
    "name": "Pylon",
    "slug": "pylon",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "newArchEnabled": true,
    "scheme": "pylon",
    "splash": {
      "image": "./assets/splash-icon.png",
      "resizeMode": "contain",
      "backgroundColor": "#ffffff"
    },
    "ios": {
      "supportsTablet": true,
      "infoPlist": {
        "NSSupportsLiveActivities": true,
        "NSSupportsLiveActivitiesFrequentUpdates": false,
        "NSSpeechRecognitionUsageDescription": "Allow $(PRODUCT_NAME) to transcribe speech into messages.",
        "NSMicrophoneUsageDescription": "Allow $(PRODUCT_NAME) to use the microphone for voice input."
      },
      "entitlements": {},
      "bundleIdentifier": "com.dhruvalg.pylon"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#ffffff"
      },
      "edgeToEdgeEnabled": true,
      "permissions": [
        "android.permission.RECORD_AUDIO",
        "android.permission.CAMERA"
      ],
      "package": "com.dhruvalg.pylon"
    },
    "web": {
      "bundler": "metro",
      "favicon": "./assets/favicon.png"
    },
    "plugins": [
      "expo-notifications",
      "expo-live-activity",
      [
        "expo-speech-recognition",
        {
          "microphonePermission": "Allow $(PRODUCT_NAME) to use the microphone for voice input.",
          "speechRecognitionPermission": "Allow $(PRODUCT_NAME) to transcribe speech into messages."
        }
      ],
      [
        "expo-camera",
        {
          "cameraPermission": "Allow $(PRODUCT_NAME) to scan bridge QR codes."
        }
      ]
    ]
  }
}
